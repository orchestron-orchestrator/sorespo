                                    <autonomous-system>65501</autonomous-system>
                                    <address-family>ipv4</address-family>
                                </bgp>
                            </routing-protocol>
                        </routing-protocols>
                    </site-network-access>
                </site-network-accesses>
            </site>
        </sites>
